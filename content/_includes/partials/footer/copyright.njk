{%- set site = siteConfig.site -%}
{%- set author = siteConfig.author -%}

{%- set author_info -%}
{%- if author.url -%}
  <a href="{{ author.url }}">{{ author.name }}</a>
{%- else -%}
  {{ author.name }}
{%- endif -%}
{%- endset -%}

{%- set startYear -%}
{%- if site.startYear -%}
  {{ site.startYear }}-
  {%- endif -%}
{%- endset -%}

<div class="copyright">
  &copy; {{ startYear }}{% currentYear %}
  {{ author_info|safe }}<br>
  {{ phrases.powered_by }}
  <a href="{{ site.generator.url }}">{{ site.generator.name }}</a><br>
</div>